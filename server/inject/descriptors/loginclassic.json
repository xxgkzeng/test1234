{
  "type": "object",
  "comment": "Login",
  "properties": {
    "username": {
      "type": "string",
      "label": "username",
      "update": {
        "type": "action",
        "action": [
          "submit"
        ]
      },
      "selector": "#username",
      "control": "text"
    },
    "password": {
      "type": "string",
      "label": "password",
      "update": {
        "type": "action",
        "action": [
          "submit"
        ]
      },
      "selector": "#passwd",
      "control": "text"
    },
    "errorMessage": {
      "type": "string",
      "label": "errorMessage",
      "update": {
        "type": "none"
      }
    },
    "submit": {
      "type": "action",
      "parameters": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "selector": ".page-body.skin-green.horizontal-menu-skin-facebook",
      "control": "action.button"
    },
    "islogin": {
      "type": "identifier",
      "selector": ".btn.btn-blue.btn-block.text-left",
      "control": "action.button"
    }
  },
  "connect": [
    {
      "match": [
        "islogin"
      ],
      "screens": [
        "loginclassic"
      ]
    }
  ]
}
